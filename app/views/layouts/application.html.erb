<!DOCTYPE html>
<html>
  <head>
    <title>DevSpotlight</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
  <script src="//maps.google.com/maps/api/js?key=AIzaSyCMnVoCajLppbNQ-JhOAz34YZchfxBS3mk"></script>
      <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
      <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <body>

  <nav class="navbar navbar-expand-lg navbar-dark navbar-custom-color">

    <%= link_to 'DevSpotlight', '/', class: 'navbar-brand', id: 'brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Directory', organizations_path ,{:class => "nav-link"}%>
          <span class="sr-only">(current)</span>
        </li>
        <li class="nav-item">
          <%= link_to 'Events', events_path,{:class => "nav-link"} %>
        </li>
        <li class="nav-item">
          <%= link_to 'News', announcements_path,{:class => "nav-link"}%>
        </li>
        <li class="nav-item">
          <%= link_to 'About', show_path,{:class => "nav-link"}%>
        </li>

         <% if current_user.present? %>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Admin
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to 'Organization', new_organization_path,{:class => "dropdown-item"}%>
            <a class="dropdown-item" href="#">Another action</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </li>

        <small class="user"><%= current_user.full_name %></small>
        <%= link_to 'Sign out', session_path, {:class => "nav-link", :method => "delete"} %>

        <% else %>
        <%= link_to 'Sign in ', new_session_path, {:class => "nav-link"}%>
        <%= link_to 'Sign up ', new_user_path, {:class => "nav-link"}%>
        <% end %>

      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-white my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>

  <%= yield %>

  <div id="brand-c">
    <h1 id="brand">DevSpotlight</h1>
  </div>

  <div class="d-flex align-items-end m-2" id="container">Â© Built and maintained by Genius Coperation</div>

  </body>
</html>

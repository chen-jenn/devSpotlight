<h1>devSpotlight Users</h1>

<table>
  <tbody>
   <tr>
     <th>First Name</th>
     <th>Last Name</th>
     <th>Email</th>
     <th>User Type</th>
     <th>Organization</th>
     <th>Status</th>
   </tr>

   <% @users.each do |user| %>
     <tr>
       <td><%= link_to user.first_name, admin_user_path(user) %></td>
       <td><%= user.last_name %></td>
       <td><%= user.email %></td>
       <td><%= user.permission_type %></td>
       <td><%= user.organization.name %></td>
       <!-- if the user has been accepted to be part of an organization -->
       <td><%= user.approved %></td>
     </tr>
   <% end %>
 </tbody>
</table>

<div class="mt-2 ml-3">
  <h1>User Directory</h1>
</div>

<div class="dashboard-table">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">E-mail</th>
        <th scope="col">User Type</th>
        <th scope="col">Organization</th>
        <th scope="col">Request Status</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>

          <% if user.permission_type == 'admin' %>
            <td>Admin</td>
          <% elsif user.permission_type == 'manager'%>
            <td>Manager</td>
          <% elsif user.permission_type == 'team_member' %>
            <td>Employee</td>
          <% end %>

          <% if user.organization %>
            <td><%= user.organization.name %></td>
          <% else %>
            <td>none</td>
          <% end %>

          <td><%= user.approved %></td>
          <td>
            <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-outline-primary" %>
            <%= link_to "Delete",  admin_user_path(user), method: :delete, class: "btn btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

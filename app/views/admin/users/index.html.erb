<h1>devSpotlight Users</h1>

<table>
  <tbody>
   <tr>
     <th>First Name</th>
     <th>Last Name</th>
     <th>Email</th>
     <th>User Type</th>
     <th>Organization</th>
     <th>Status</th>
   </tr>

   <% @users.each do |user| %>
     <tr>
       <td><%= link_to user.first_name, admin_user_path(user) %></td>
       <td><%= user.last_name %></td>
       <td><%= user.email %></td>

       <% if user.permission_type == 'admin' %>
         <td>Admin</td>
       <% elsif user.permission_type == 'manager'%>
         <td>Manager</td>
       <% elsif user.permission_type == 'team_member' %>
         <td>Employee</td>
       <% end %>


       <% if user.organization %>
         <td><%= user.organization.name %></td>
       <% else %>
         <td>none</td>
       <% end %>

       <td><%= user.approved %></td>
     </tr>
   <% end %>
 </tbody>
</table>
